<Window x:Class="TruongQuangLamWPF.Windows.CustomerWindow"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
        mc:Ignorable="d"
        Title="CustomerWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
    WindowState="Maximized" Background="White">
    <Grid Margin="30">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">

            <TextBlock Text="Xin chào khách hàng!" 
                       FontSize="24" FontWeight="Bold" Foreground="#2196F3" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Button Content="Xem đơn hàng" Height="40" Background="#4CAF50" Foreground="White" FontSize="16" Margin="0,5" Click="Button_Click"/>
            <Button Content="Cập nhật hồ sơ" Height="40" Background="#FF9800" Foreground="White" FontSize="16" Margin="0,5"/>
            <Button Content="Đăng xuất" Height="40" Background="#F44336" Foreground="White" FontSize="16" Margin="0,5" Click="Logout_Click"/>
            
        </StackPanel>
    </Grid>
</Window>
