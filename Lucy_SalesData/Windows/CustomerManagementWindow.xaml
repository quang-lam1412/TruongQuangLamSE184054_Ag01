<Window x:Class="Lucy_SalesData.Windows.CustomerManagementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Khách Hàng" 
        Height="700" Width="1000"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">

    <Window.Resources>
        <!-- Button Styles -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="5"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#27ae60" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="👥 QUẢN LÝ KHÁCH HÀNG" 
                              FontSize="24" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock Text="Thêm, sửa, xóa thông tin khách hàng" 
                              FontSize="14" 
                              Foreground="#ecf0f1"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <Button Grid.Column="1" 
                       x:Name="btnBack"
                       Content="← Quay lại"
                       Background="Transparent"
                       Foreground="White"
                       BorderBrush="White"
                       BorderThickness="2"
                       Padding="15,8"
                       Click="BtnBack_Click"/>
            </Grid>
        </Border>

        <!-- Search and Actions -->
        <Border Grid.Row="1" Background="White" Padding="20">
            <Border.BorderBrush>
                <SolidColorBrush Color="#ddd"/>
            </Border.BorderBrush>
            <Border.BorderThickness>
                <Thickness Bottom="1"/>
            </Border.BorderThickness>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="🔍 Tìm kiếm:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtSearch" 
                            Width="300" 
                            Padding="8"
                            FontSize="14"
                            TextChanged="TxtSearch_TextChanged"
                            KeyDown="TxtSearch_KeyDown"/>
                    <Button x:Name="btnClearSearch"
                           Content="✖ Xóa"
                           Style="{StaticResource ActionButtonStyle}"
                           Background="#95a5a6"
                           Foreground="White"
                           Click="BtnClearSearch_Click"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button x:Name="btnAdd"
                           Content="➕ Thêm mới"
                           Style="{StaticResource ActionButtonStyle}"
                           Background="#27ae60"
                           Foreground="White"
                           Click="BtnAdd_Click"/>
                    <Button x:Name="btnEdit"
                           Content="✏️ Sửa"
                           Style="{StaticResource ActionButtonStyle}"
                           Background="#3498db"
                           Foreground="White"
                           Click="BtnEdit_Click"
                           IsEnabled="False"/>
                    <Button x:Name="btnDelete"
                           Content="🗑️ Xóa"
                           Style="{StaticResource ActionButtonStyle}"
                           Background="#e74c3c"
                           Foreground="White"
                           Click="BtnDelete_Click"
                           IsEnabled="False"/>
                    <Button x:Name="btnRefresh"
                           Content="🔄 Làm mới"
                           Style="{StaticResource ActionButtonStyle}"
                           Background="#f39c12"
                           Foreground="White"
                           Click="BtnRefresh_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Customer List -->
        <DataGrid Grid.Row="2" 
                 x:Name="dgCustomers"
                 AutoGenerateColumns="False"
                 CanUserAddRows="False"
                 CanUserDeleteRows="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 GridLinesVisibility="Horizontal"
                 HeadersVisibility="Column"
                 AlternatingRowBackground="#f8f9fa"
                 SelectionChanged="DgCustomers_SelectionChanged"
                 MouseDoubleClick="DgCustomers_MouseDoubleClick">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Mã KH" Binding="{Binding CustomerId}" Width="80"/>
                <DataGridTextColumn Header="Tên Công Ty" Binding="{Binding CompanyName}" Width="200"/>
                <DataGridTextColumn Header="Người Liên Hệ" Binding="{Binding ContactName}" Width="150"/>
                <DataGridTextColumn Header="Chức Vụ" Binding="{Binding ContactTitle}" Width="120"/>
                <DataGridTextColumn Header="Địa Chỉ" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="Điện Thoại" Binding="{Binding Phone}" Width="120"/>
                <DataGridTextColumn Header="Số Đơn Hàng" Binding="{Binding Orders.Count}" Width="100"/>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Cursor" Value="Hand"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#e3f2fd"/>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- Status Bar -->
        <Border Grid.Row="3" Background="#34495e" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          x:Name="lblStatus"
                          Text="Sẵn sàng" 
                          Foreground="#bdc3c7" 
                          VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                          x:Name="lblTotalRecords"
                          Text="Tổng: 0 khách hàng" 
                          Foreground="#bdc3c7" 
                          VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
