<Window x:Class="Lucy_SalesData.Windows.CustomerAddEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thông Tin Khách Hàng" 
        Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <!-- Input Style -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderBrush" Value="#ddd"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="0,5,0,15"/>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                               CornerRadius="5"
                               Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#3498db" Padding="20">
            <TextBlock x:Name="lblTitle" 
                      Text="➕ THÊM KHÁCH HÀNG MỚI" 
                      FontSize="20" 
                      FontWeight="Bold" 
                      Foreground="White"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" Padding="30" Background="#f8f9fa">
            <StackPanel>
                <!-- Company Name -->
                <TextBlock Text="Tên Công Ty *" Style="{StaticResource LabelStyle}" Foreground="#e74c3c"/>
                <TextBox x:Name="txtCompanyName" 
                        Style="{StaticResource InputStyle}"
                        MaxLength="40"/>

                <!-- Contact Name -->
                <TextBlock Text="Người Liên Hệ" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtContactName" 
                        Style="{StaticResource InputStyle}"
                        MaxLength="30"/>

                <!-- Contact Title -->
                <TextBlock Text="Chức Vụ Liên Hệ" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtContactTitle" 
                        Style="{StaticResource InputStyle}"
                        MaxLength="30"/>

                <!-- Address -->
                <TextBlock Text="Địa Chỉ" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtAddress" 
                        Style="{StaticResource InputStyle}"
                        MaxLength="60"
                        Height="60"
                        TextWrapping="Wrap"
                        AcceptsReturn="True"
                        VerticalScrollBarVisibility="Auto"/>

                <!-- Phone -->
                <TextBlock Text="Số Điện Thoại" Style="{StaticResource LabelStyle}"/>
                <TextBox x:Name="txtPhone" 
                        Style="{StaticResource InputStyle}"
                        MaxLength="24"/>

                <!-- Required Field Note -->
                <TextBlock Text="* Trường bắt buộc" 
                          FontStyle="Italic" 
                          Foreground="#e74c3c" 
                          Margin="0,10,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <Border Grid.Row="2" Background="White" Padding="20">
            <Border.BorderBrush>
                <SolidColorBrush Color="#ddd"/>
            </Border.BorderBrush>
            <Border.BorderThickness>
                <Thickness Top="1"/>
            </Border.BorderThickness>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnSave"
                       Content="💾 Lưu"
                       Style="{StaticResource ButtonStyle}"
                       Background="#27ae60"
                       Foreground="White"
                       Click="BtnSave_Click"/>
                <Button x:Name="btnCancel"
                       Content="❌ Hủy"
                       Style="{StaticResource ButtonStyle}"
                       Background="#95a5a6"
                       Foreground="White"
                       Click="BtnCancel_Click"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
